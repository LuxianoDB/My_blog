<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= post.title %></title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <%- include('header') %>
    <h1><%= post.title %></h1>
    <p><%= post.content %></p>
    <small>Publicado el <%= post.created_at %></small>
    <% if (user) { %>
      <form action="/comment/<%= post.id %>" method="POST">
        <textarea name="content" placeholder="Tu comentario" required></textarea>
        <button type="submit">Comentar</button>
      </form>
    <% } %>
    <h2>Comentarios</h2>
    <% if (comments.length > 0) { %>
      <% comments.forEach(comment => { %>
        <div class="comment">
          <img src="/profile-picture/<%= comment.id %>" alt="Perfil" width="30" height="30">
          <strong><%= comment.username %></strong>
          <p><%= comment.content %></p>
          <small>Publicado el <%= comment.created_at %></small>
        </div>
      <% }) %>
    <% } else { %>
      <p>No hay comentarios a√∫n.</p>
    <% } %>
  </div>
</body>
</html>
